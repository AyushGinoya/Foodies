<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tabs.SettingFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/profile_photo"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baseline_account_circle_24"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/mypink"
            app:civ_circle_background_color="@color/mypink"
            app:civ_border_overlay="true"
            android:layout_marginTop="20dp"
            android:contentDescription="User Image" />

        <ImageButton
            android:id="@+id/take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="111dp"
            android:src="@drawable/baseline_photo_camera_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_photo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:text="User Email"
                android:layout_marginLeft="10dp"
                android:id="@+id/t_email"
                android:fontFamily="@font/aclonica"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/email1"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/t_email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/email1"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginLeft="10dp"
                android:id="@+id/num"
                android:fontFamily="@font/aclonica"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/number"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/num"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/number"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Student id"
                android:layout_marginLeft="10dp"
                android:id="@+id/myid"
                android:fontFamily="@font/aclonica"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/my_id"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/myid"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/my_id"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:layout_marginLeft="10dp"
                android:id="@+id/birthDate"
                android:fontFamily="@font/aclonica"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/dob2"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:layout_below="@id/birthDate"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:layout_below="@+id/dob2"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/mypink"
                android:fontFamily="@font/aclonica"
                android:id="@+id/update_profile"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_below="@+id/update_profile"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/mypink"
                android:fontFamily="@font/aclonica"
                android:id="@+id/logout"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
